mixin header(modifier)
  header.header&attributes(attributes)
    .header__content
      .header__links
        a(href="#").header__logo 
          img(src="img/svg/logo.svg" alt='Белый Сервис').header__logo_image
        nav.header__navigation
          a(href="#").header__link Контакты
          a(href="#").header__link Отзывы
          a(href="#").header__link Гарантия
      .header__contact 
        p.header__contact_text Звоните, пн-вс 10:00 - 20:00 
        a(href='tel:+73512207704').header__contact_phone +7 351 220 77 04